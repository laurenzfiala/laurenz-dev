{
  "name": "app-index",
  "description": "Webcomponent app-index following open-wc recommendations",
  "license": "MIT",
  "author": "app-index",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier . -w --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && npm run analyze -- --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\""
  },
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.15",
    "@custom-elements-manifest/analyzer": "^0.8.4",
    "@open-wc/building-rollup": "^3.0.2",
    "@open-wc/eslint-config": "^12.0.0",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@web/dev-server": "^0.3.1",
    "@web/dev-server-storybook": "^1.0.5",
    "@web/rollup-plugin-html": "^2.0.1",
    "@web/rollup-plugin-import-meta-assets": "^2.0.2",
    "@web/test-runner": "^0.17.1",
    "autoprefixer": "^10.4.15",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^8.2.1",
    "deepmerge": "^4.3.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "postcss-import": "^15.1.0",
    "postcss-lit": "^1.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-workbox": "^8.0.1",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "customElements": "custom-elements.json"
}
